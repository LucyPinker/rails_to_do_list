<h1>This where all the tasks will be</h1>
<table>
  <tr>
    <th>Task</th>
    <th>Status</th>
  </tr>
    <% @user.tasks.each do |task|  %>
  <tr>
      <td> <% if task.status == "done" %>
            <s><%= task.name %></s>
            <% else %>
            <%= task.name %>
            <% end %>
      </td>
      <td><%= task.status %></td>
      <td><%= link_to "X", user_task_path(@user, task), method: :delete  %></td>
      <td><%= link_to "Tick", user_task_path(@user, task, {status: "done"}), method: :patch  %></td>
      <td><%= link_to "Progress", user_task_path(@user, task, {status: "doing"}), method: :patch  %></td>
  </tr>
  <% end %>
</table>
<%= link_to "Home", root_path %>

<%= simple_form_for [@user, @task] do |f| %>
  <%= f.input :name %>
  <%= f.submit %>
<% end %>
